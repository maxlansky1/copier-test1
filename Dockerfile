# ================================================
# üìå –≠—Ç–∞–ø 1. –°–±–æ—Ä–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π
# –ò—Å–ø–æ–ª—å–∑—É–µ–º slim-–æ–±—Ä–∞–∑ Python –¥–ª—è –º–∏–Ω–∏–º–∞–ª—å–Ω–æ–≥–æ —Ä–∞–∑–º–µ—Ä–∞
FROM python:3.11-slim as builder

# –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ä–∞–±–æ—á—É—é –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é –¥–ª—è —Å–±–æ—Ä–∫–∏ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π
WORKDIR /install

# –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ —Å–∏—Å—Ç–µ–º–Ω—ã–µ –±–∏–±–ª–∏–æ—Ç–µ–∫–∏ –¥–ª—è —Å–±–æ—Ä–∫–∏ C-–∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π:
# build-essential ‚Äî gcc, g++, make –¥–ª—è —Å–±–æ—Ä–∫–∏ C-–∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π
# libglib2.0-0, libgl1 ‚Äî –±–∏–±–ª–∏–æ—Ç–µ–∫–∏ –¥–ª—è OpenCV
# libxml2-dev, libxslt1-dev ‚Äî –±–∏–±–ª–∏–æ—Ç–µ–∫–∏ –¥–ª—è lxml
# libjpeg-dev, zlib1g-dev ‚Äî –±–∏–±–ª–∏–æ—Ç–µ–∫–∏ –¥–ª—è Pillow (—Ä–∞–±–æ—Ç–∞ —Å –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è–º–∏)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# –ö–æ–ø–∏—Ä—É–µ–º —Ç–æ–ª—å–∫–æ requirements.txt –Ω–∞ —ç—Ç–∞–ø–µ —Å–±–æ—Ä–∫–∏ ‚Äî —ç—Ç–æ –ø–æ–∑–≤–æ–ª—è–µ—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –∫–µ—à, –µ—Å–ª–∏ deps –Ω–µ –∏–∑–º–µ–Ω–∏–ª–∏—Å—å
COPY requirements.txt .

# –°—Ç–∞–≤–∏–º pip –∏ —Å–æ–±–∏—Ä–∞–µ–º –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –≤ wheel-—Ñ–∞–π–ª—ã (–∞—Ä—Ö–∏–≤—ã Python-–±–∏–±–ª–∏–æ—Ç–µ–∫)
RUN pip install --upgrade pip && \
    pip wheel --no-deps --wheel-dir /wheels -r requirements.txt


# ================================================
# üìå –≠—Ç–∞–ø 2. –§–∏–Ω–∞–ª—å–Ω—ã–π –º–∏–Ω–∏–º–∞–ª—å–Ω—ã–π –æ–±—Ä–∞–∑ –¥–ª—è –∑–∞–ø—É—Å–∫–∞ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
FROM python:3.11-slim

# –ù–µ —Å–æ–∑–¥–∞–≤–∞—Ç—å .pyc ‚Äî –º–µ–Ω—å—à–µ –º—É—Å–æ—Ä–∞
ENV PYTHONDONTWRITEBYTECODE=1

# –õ–æ–≥–∏ —Å—Ä–∞–∑—É –≤—ã–≤–æ–¥—è—Ç—Å—è
ENV PYTHONUNBUFFERED=1

# –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —á–∞—Å–æ–≤–æ–π –ø–æ—è—Å
ENV TZ=Europe/Moscow

# ‚úÖ –†–∞–±–æ—á–∞—è –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—è –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
WORKDIR /app

# ‚úÖ –ö–æ–ø–∏—Ä—É–µ–º wheel-—Ñ–∞–π–ª—ã –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π –∏–∑ builder
COPY --from=builder /wheels /wheels
COPY requirements.txt .

# ‚úÖ –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –∏–∑ wheel-—Ñ–∞–π–ª–æ–≤ ‚Äî –±—ã—Å—Ç—Ä–æ, –æ—Ñ—Ñ–ª–∞–π–Ω, –±–µ–∑ –∫–æ–º–ø–∏–ª—è—Ü–∏–∏
RUN pip install --no-deps --no-index --find-links=/wheels -r requirements.txt

# ‚úÖ –ö–æ–ø–∏—Ä—É–µ–º –∫–æ–¥ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
COPY . .

# ‚úÖ –î–æ–±–∞–≤–ª—è–µ–º –±–µ–∑–æ–ø–∞—Å–Ω–æ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –∏ –ø–µ—Ä–µ—Ö–æ–¥–∏–º –Ω–∞ –Ω–µ–≥–æ
RUN adduser --disabled-password --gecos "" appuser && \
    chown -R appuser:appuser /app
USER appuser

# ‚úÖ (–û–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ) –î–µ–ª–∞–µ–º –æ—Å–Ω–æ–≤–Ω–æ–π —Ñ–∞–π–ª –∏—Å–ø–æ–ª–Ω—è–µ–º—ã–º (–µ—Å–ª–∏ –æ–Ω –∑–∞–ø—É—Å–∫–∞–µ—Ç—Å—è –Ω–∞–ø—Ä—è–º—É—é)
RUN chmod +x ./src/main.py

# ‚úÖ HEALTHCHECK –¥–ª—è –º–æ–Ω–∏—Ç–æ—Ä–∏–Ω–≥–∞ –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç–∏ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
  CMD curl -f http://localhost:8000/health || exit 1

# ‚úÖ –Ø–≤–Ω–æ –ø—Ä–æ–ø–∏—Å—ã–≤–∞–µ–º CMD
CMD ["python", "-m", "src.main"]

# ================================================
# üìå –ü—Ä–∏–º–µ—Ä .dockerignore (—Å–æ–∑–¥–∞–π –≤ –∫–æ—Ä–Ω–µ –ø—Ä–æ–µ–∫—Ç–∞):
# .git
# __pycache__/
# *.pyc
# .env
# .vscode/
# node_modules/
# *.log
# tests/   # –µ—Å–ª–∏ —Ç–µ—Å—Ç—ã –Ω–µ –Ω—É–∂–Ω—ã –≤ –æ–±—Ä–∞–∑–µ
